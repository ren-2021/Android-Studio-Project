<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FragmentB">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="1sp"/>

    <TextView
        android:id="@+id/tvLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Step"
        android:textColor="@color/SeaGreen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLabel2"
        android:layout_marginLeft="30dp"
        android:text="4"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLabel2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/textView15"
        android:text="Attach the RAM (memory) modules in the corresponding slots."
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView16"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="The motherboard should have rows of slots that have 2 or 4 sections. Make sure the pins on the RAM cards line up with the pins on the motherboard connector." />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/textView19"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ramtoslot" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView13"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Use the orientation mark to line up the pins on the RAM cards to the slot and gently push it down. And tabs lock it into place when board is seated." />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/textView20"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/tabslock" />



</RelativeLayout>